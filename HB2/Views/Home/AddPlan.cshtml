@model HB2.Models.Plan
@{
    ViewBag.Title = "Добавление Плана";
}
<div class="container">
    <form asp-action="AddPlan" asp-controller="home" id="Form1">
        <div>
            <input type="hidden" asp-for="User.Email" value=@User.Identity.Name />
        </div>
        <div class="form-group">
            <label asp-for="Name" class="control-label">Название</label>
            <input type="text" asp-for="Name" class="form-control" />
        </div>
        <div id="divdata">
            <label class="control-label" for="inpdata">Дата начала периода</label>
            <input type="datetime-local" class="form-control" name="Data" id="inpdata">
        </div>
        <div>
            <label class="control-label" for="inpdata">Дата конца периода</label>
            <input type="datetime-local" class="form-control" name="DataPeriod" id="inpdata">
        </div>
        <div class="form-group">
            <input type="submit" value="Добавить" class="btn btn-default" />
        </div>
    </form>
</div>
